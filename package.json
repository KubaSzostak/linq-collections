{
	"repository": {
		"type": "git",
		"url": "https://github.com/isc30/TsLinq.git"
	},
	"scripts": {
		"prepare": "tsc",
		
		"pretest": "tsc",
		"test": "mocha",

		"cover": "nyc --reporter=lcov npm t",
		"report-coverage": "nyc report --reporter=text-lcov | coveralls",
		
		"check-coverage": "nyc check-coverage --lines 10",
		"validate": "npm run cover && npm run check-coverage"
	},
	"devDependencies": {
		"@types/node": "*",
		"@types/jasmine": "*",
		"mocha": "*",
		"typescript": "*",
		"coveralls": "*",
		"nyc": "*"
	},
	"directories": {
		"test": "test"
	},
	"config": {
		"ghooks": {
		  "pre-commit": "npm run validate"
		}
	}
}
